                <AIEmpireStrategicResource>1.1</AIEmpireStrategicResource>
                <AIEmpireLuxuryResource>0.9</AIEmpireLuxuryResource>

                <AIWorldNavy>1.4</AIWorldNavy>
                <AIWorldSpy>0.1</AIWorldSpy>
                <AIWorldWar>2</AIWorldWar>
                <AIWorldPeace>0</AIWorldPeace>
                <AIWorldStrategicMarketPrice>-0.1</AIWorldStrategicMarketPrice>
                <AIWorldLuxuryMarketPrice>-0.1</AIWorldLuxuryMarketPrice>
                <AIWorldMercenaryMarketPrice>-0.3</AIWorldMercenaryMarketPrice>
              </ElementEvaluatorContextMultiplier>
            </AILayer_Altar>
            
            <AILayer_Research>
              <ElementEvaluatorContextMultiplier>
                <AIEmpireApproval>0.9</AIEmpireApproval>
                <AIEmpireGrowth>1.1</AIEmpireGrowth>
                <AIEmpireProduction>1.9</AIEmpireProduction>
                <AIEmpireResearch>0.7</AIEmpireResearch>
                <AIEmpireMoney>1.1</AIEmpireMoney>
                <AIEmpireEmpirePoint>0.6</AIEmpireEmpirePoint>
