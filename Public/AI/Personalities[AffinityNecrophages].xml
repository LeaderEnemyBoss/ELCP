                <AIEmpireUnlockBoosterCultist>0</AIEmpireUnlockBoosterCultist>
                <AIEmpireUnlockDiplomacyPositive>0</AIEmpireUnlockDiplomacyPositive>
              </ElementEvaluatorContextMultiplier>
            </AILayer_Research>
          </AIEntity_Empire>

          <AIEntity_City>
            <AILayer_Production>              
              <ElementEvaluatorContextMultiplier>
                <AICityApproval>0.9</AICityApproval>
                <AICityGrowth>1.1</AICityGrowth>
                <AICityProduction>1.6</AICityProduction>
                <AICityResearch>0.5</AICityResearch>
