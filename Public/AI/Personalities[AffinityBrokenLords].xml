                <AIEmpireUnlockShip>1</AIEmpireUnlockShip>
                <AIEmpireUnlockUnit>1.3</AIEmpireUnlockUnit>
                <AIEmpireUnlockAssimilation>0.9</AIEmpireUnlockAssimilation>
