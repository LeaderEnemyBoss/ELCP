            </AILayer_Altar>


            <AILayer_Research>
              <ElementEvaluatorContextMultiplier>
                <AIEmpireApproval>0.8</AIEmpireApproval>
                <AIEmpireGrowth>0.8</AIEmpireGrowth>
                <AIEmpireProduction>1.2</AIEmpireProduction>
                <AIEmpireResearch>0.9</AIEmpireResearch>
                <AIEmpireMoney>4</AIEmpireMoney>
                <AIEmpireEmpirePoint>0.8</AIEmpireEmpirePoint>
                <AIEmpirePillageDefense>1.2</AIEmpirePillageDefense>
                <AIEmpireAntiSpy>1.4</AIEmpireAntiSpy>
                <AIEmpireMilitaryPower>1.5</AIEmpireMilitaryPower>
                <AIEmpireCityDefense>1.5</AIEmpireCityDefense>
