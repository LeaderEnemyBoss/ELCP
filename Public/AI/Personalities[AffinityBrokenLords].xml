                <AIEmpireMilitaryPower>1.4</AIEmpireMilitaryPower>
                <AIEmpireAntiSpy>1.4</AIEmpireAntiSpy>
                <AIEmpirePillageDefense>1.2</AIEmpirePillageDefense>
                <AIEmpireCityDefense>1.5</AIEmpireCityDefense>
