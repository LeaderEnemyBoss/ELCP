    <!-- bonus to security -->
    <ToAIParameter AIParameter="AICityAntiSpy">(((100 - $Property(NetCityApproval)) min $(Input)) / 100) * 40 / (5 + ($Property(../EmpireTypeMajor:EmpireScaleFactor) * 5))</ToAIParameter>
