<?xml version="1.0" encoding="utf-8" ?>
<Datatable xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">

  <AIPersonalityDefinition Name="PersonalityAffinityCultists">
    <Multipliers>
      <!-- AI Registry -->
      <AI>
	  
		<AgentDefinition>
			<IndustryReferenceTurnCountAgent>
				<MaximumTurnCount>0.75</MaximumTurnCount>
				<ProductionStressMinimumValue>1.2</ProductionStressMinimumValue>
			</IndustryReferenceTurnCountAgent>
		
			<TechnologyReferenceTurnCountAgent>
				<IdealTechnologyUnlockPeriod>1.1</IdealTechnologyUnlockPeriod>
			</TechnologyReferenceTurnCountAgent>
		
			<MoneyPrintTermAgent>
				<Multiplier>0</Multiplier>
			</MoneyPrintTermAgent>
			
			<PopulationReferenceTurnCountAgent>
				<!-- Define the maximum criticy point. MaximumNumberOfTurnToReachNextPopulation = RangeRatio *  IdealNumberOfTurnToReachNextPopulation -->
				<RangeRatio>0.7</RangeRatio>
			</PopulationReferenceTurnCountAgent>
			
			<WarTermAgent>
				<OpportunistMultiplier>1.2</OpportunistMultiplier>
			</WarTermAgent>
        </AgentDefinition>
		
	  
        <MajorEmpire>
          <AIEntity_Empire>
			<AILayer_Victory>
				<VictoryFocusMilitary>2.5</VictoryFocusMilitary>
				<VictoryFocusDiplomacy>1.7</VictoryFocusDiplomacy>
				<VictoryFocusEconomy>0.9</VictoryFocusEconomy>
				<VictoryFocusTechnology>0.5</VictoryFocusTechnology>
			</AILayer_Victory>
            <!-- The degree to which various attitude modifiers are taken into account -->
            <AILayer_Attitude>
              <!-- ##### -->
              <!-- TRUST -->
              <!-- ##### -->
              <!-- Positive -->
              <AttitudeScorePeaceful>1.4</AttitudeScorePeaceful>
              <AttitudeScoreCommonEnemy>1.6</AttitudeScoreCommonEnemy>
              <AttitudeScoreCommonFriend>1.3</AttitudeScoreCommonFriend>
              <AttitudeScoreCommonAlly>1.3</AttitudeScoreCommonAlly>
              <AttitudeScorePositiveContract>1.3</AttitudeScorePositiveContract>
              <AttitudeScoreGift>1.3</AttitudeScoreGift>
              <AttitudeScoreMantaAspiratingInMyTerritory>0.4</AttitudeScoreMantaAspiratingInMyTerritory>
              <AttitudeScoreLongTermAlliance>0.9</AttitudeScoreLongTermAlliance>
              <AttitudeScoreLongTermPeace>0.9</AttitudeScoreLongTermPeace>
              <AttitudeScoreTerraformedInMyTerritoryPositive>0</AttitudeScoreTerraformedInMyTerritoryPositive>
              <AttitudeScoreTerraformedNearMyArmiesPositive>0</AttitudeScoreTerraformedNearMyArmiesPositive>
              <AttitudeScoreKaijuPlacedNearMyCityPositive>1.2</AttitudeScoreKaijuPlacedNearMyCityPositive>
              <!-- Negative -->
              <AttitudeScoreLastWar>2</AttitudeScoreLastWar>
              <AttitudeScoreArmyAggressionInNeutralRegionDuringColdWar>1.8</AttitudeScoreArmyAggressionInNeutralRegionDuringColdWar>
              <AttitudeScoreAggressiveColonization>2</AttitudeScoreAggressiveColonization>
              <AttitudeScoreNegativeContract>1.3</AttitudeScoreNegativeContract>
              <AttitudeScoreVillageConverted>1.6</AttitudeScoreVillageConverted>
              <AttitudeScoreRegionalBuildingDestroyed>1.7</AttitudeScoreRegionalBuildingDestroyed>
              <AttitudeScoreSpy>2</AttitudeScoreSpy>
              <AttitudeScorePillaging>1.5</AttitudeScorePillaging>
              <AttitudeScorePillageSucceed>1.5</AttitudeScorePillageSucceed>
              <AttitudeScoreDismantleDeviceSuffered>1.5</AttitudeScoreDismantleDeviceSuffered>
              <AttitudeScoreOrbsStolen>0.4</AttitudeScoreOrbsStolen>
              <AttitudeScoreEliminatedAcquaintance>0.8</AttitudeScoreEliminatedAcquaintance>
              <AttitudeScoreEliminatedAlly>0.8</AttitudeScoreEliminatedAlly>
              <AttitudeScoreEliminatedEnemy>0.8</AttitudeScoreEliminatedEnemy>
              <AttitudeScoreEliminatedFriend>0.8</AttitudeScoreEliminatedFriend>
              <AttitudeScoreCityTakenFromAlly>0.8</AttitudeScoreCityTakenFromAlly>
              <AttitudeScoreCityTakenFromEnemy>0.8</AttitudeScoreCityTakenFromEnemy>
              <AttitudeScoreCityTakenFromFriend>0.8</AttitudeScoreCityTakenFromFriend>
              <AttitudeScoreAtWarWithMyAlly>0.8</AttitudeScoreAtWarWithMyAlly>
              <AttitudeScoreAlliedWithMyEnemy>1.3</AttitudeScoreAlliedWithMyEnemy>
              <AttitudeScoreBetrayedYourAlly>0.8</AttitudeScoreBetrayedYourAlly>
              <AttitudeScoreBetrayedYourFriend>0.8</AttitudeScoreBetrayedYourFriend>
              <AttitudeScoreTerraformedInMyTerritoryNegative>0.3</AttitudeScoreTerraformedInMyTerritoryNegative>
              <AttitudeScoreTerraformedNearMyArmiesNegative>0.3</AttitudeScoreTerraformedNearMyArmiesNegative>
              <AttitudeScoreCreepingNodeUpgradeComplete>1.2</AttitudeScoreCreepingNodeUpgradeComplete>
              <AttitudeScoreKaijuAttacked>1.5</AttitudeScoreKaijuAttacked>
              <AttitudeScoreKaijuPlacedNearMyCityNegative>1.6</AttitudeScoreKaijuPlacedNearMyCityNegative>
              
              <!-- #### -->
              <!-- WAR -->
              <!-- #### -->
              <!-- Positive (towards asking for peace) -->
              <AttitudeScoreWarFatigue>0.5</AttitudeScoreWarFatigue>
              <AttitudeScoreMyEmpireUnitsKilledDuringWar>0.3</AttitudeScoreMyEmpireUnitsKilledDuringWar>
              <AttitudeScoreMyEmpireCitiesBesiegedDuringWar>1.2</AttitudeScoreMyEmpireCitiesBesiegedDuringWar>
              <AttitudeScoreMyEmpireCitiesTakenDuringWar>1.4</AttitudeScoreMyEmpireCitiesTakenDuringWar>
              <AttitudeScoreMyEmpireFortressesTakenDuringWar>1.1</AttitudeScoreMyEmpireFortressesTakenDuringWar>
              <AttitudeScoreMyEmpireLostNavalRegionControlDuringWar>1.1</AttitudeScoreMyEmpireLostNavalRegionControlDuringWar>
              <AttitudeScoreOtherEmpireLostNavalRegionControlDuringWar>0.6</AttitudeScoreOtherEmpireLostNavalRegionControlDuringWar>
              <!-- Negative (towards remaining at war) -->
              <AttitudeScoreOtherEmpireUnitsKilledDuringWar>1.2</AttitudeScoreOtherEmpireUnitsKilledDuringWar>
              <AttitudeScoreOtherEmpireCitiesBesiegedDuringWar>1.2</AttitudeScoreOtherEmpireCitiesBesiegedDuringWar>
              <AttitudeScoreOtherEmpireCitiesTakenDuringWar>1.2</AttitudeScoreOtherEmpireCitiesTakenDuringWar>
              <AttitudeScoreOtherEmpireFortressesTakenDuringWar>1.2</AttitudeScoreOtherEmpireFortressesTakenDuringWar>
              <!-- #### -->
              <!-- FEAR -->
              <!-- #### -->
              <!-- Positive (towards avoiding war) -->
              <AttitudeScoreMyEmpireLeadMilitaryPower>1.3</AttitudeScoreMyEmpireLeadMilitaryPower>
              <AttitudeScoreMyEmpireLeadNavalMilitaryPower>1.1</AttitudeScoreMyEmpireLeadNavalMilitaryPower>
              <!-- Negative (towards declaring war) -->
              <AttitudeScoreOtherEmpireLeadMilitaryPower>0.7</AttitudeScoreOtherEmpireLeadMilitaryPower>
              <AttitudeScoreUnitsInMyTerritory>2.5</AttitudeScoreUnitsInMyTerritory>
              <AttitudeScoreOtherEmpireLeadNavalMilitaryPower>0.6</AttitudeScoreOtherEmpireLeadNavalMilitaryPower>
              <!-- #### -->
              <!-- ENVY -->
              <!-- #### -->
              <!-- Positive (towards avoiding war) -->
              <AttitudeScoreMyEmpireLeadScore>0.8</AttitudeScoreMyEmpireLeadScore>
              <AttitudeScoreMyEmpireLeadRegionCount>0.8</AttitudeScoreMyEmpireLeadRegionCount>
              <AttitudeScoreMyEmpireLeadNavalRegionCount>0.8</AttitudeScoreMyEmpireLeadNavalRegionCount>
              <!-- Negative (towards declaring war) -->
              <AttitudeScoreCommonFrontier>1.6</AttitudeScoreCommonFrontier>
              <AttitudeScoreOtherEmpireLeadScore>1.6</AttitudeScoreOtherEmpireLeadScore>
              <AttitudeScoreLivingSpaceTense>1.6</AttitudeScoreLivingSpaceTense>
              <AttitudeScoreOtherEmpireLeadRegionCount>0.1</AttitudeScoreOtherEmpireLeadRegionCount>
              <AttitudeScoreVictoryAlertGlobalScoreWhenLastTurnReached>1</AttitudeScoreVictoryAlertGlobalScoreWhenLastTurnReached>
              <AttitudeScoreVictoryAlertLastEmpireStanding>1</AttitudeScoreVictoryAlertLastEmpireStanding>
              <AttitudeScoreVictoryAlertExpansion>1</AttitudeScoreVictoryAlertExpansion>
              <AttitudeScoreVictoryAlertEconomy>1</AttitudeScoreVictoryAlertEconomy>
              <AttitudeScoreVictoryAlertDiplomacy>1</AttitudeScoreVictoryAlertDiplomacy>
              <AttitudeScoreVictoryAlertWonder>1</AttitudeScoreVictoryAlertWonder>
              <AttitudeScoreVictoryAlertMostTechnologiesDiscovered>1</AttitudeScoreVictoryAlertMostTechnologiesDiscovered>
              <AttitudeScoreVictoryAlertSupremacy>1</AttitudeScoreVictoryAlertSupremacy>
              <AttitudeScoreVictoryAlertQuest>1</AttitudeScoreVictoryAlertQuest>
              <AttitudeScoreFortressesOwnedInTheSameRegion>1.5</AttitudeScoreFortressesOwnedInTheSameRegion>
              <AttitudeScoreOtherEmpireHasUniqueFacility>1.5</AttitudeScoreOtherEmpireHasUniqueFacility>
              <AttitudeScoreOtherEmpireLeadNavalRegionCount>1.1</AttitudeScoreOtherEmpireLeadNavalRegionCount>
            </AILayer_Attitude>
			
			<!-- ELCP\LeaderEnemyBoss Cultists are more likely to offer nice deals -->
			<AILayer_Diplomacy>
			  <SweetenDealThreshold>1.25</SweetenDealThreshold>
			</AILayer_Diplomacy>
			
			<AILayer_HeroAssignation>
			  <!-- ELCP\LeaderEnemyBoss Cultists need less heroes, -->
              <MaximumHeroCount>0.8</MaximumHeroCount>
              <MaximumTurnForHero>0.6</MaximumTurnForHero>
              <MaximumFractionOfHeroesSpy>1.5</MaximumFractionOfHeroesSpy>
			  <!-- End ELCP -->
            </AILayer_HeroAssignation>
            
            <AILayer_Strategy>
              
              <ResearchScoreFactor>0.8</ResearchScoreFactor>
              <EconomicScoreFactor>1.0</EconomicScoreFactor>
              <DiplomaticScoreFactor>0.5</DiplomaticScoreFactor>
              <PrepareWarScoreFactor>1.2</PrepareWarScoreFactor>

              <!--
              Defensive
              -->

              <Network>
                <MilitaryEmpireNeedAgent>
                  <GlobalUnitCountMultiplier>1</GlobalUnitCountMultiplier>

                  <!-- City unit need: NumberOfUnitPerCity = CLAMP((turn - CityUnitNeedStartTurn) / CityUnitNeedTurnRatio, MinimumNumberOfUnitPerCity, MaximumNumberOfUnitPerCity) -->
                  <CityUnitNeedStartTurn>1.5</CityUnitNeedStartTurn>
                  <CityUnitNeedTurnRatio>1.5</CityUnitNeedTurnRatio>
                  <MinimumNumberOfUnitPerCity>0</MinimumNumberOfUnitPerCity>
                  <MaximumNumberOfUnitPerCity>1.6</MaximumNumberOfUnitPerCity>

                  <!-- Roaming unit need: NumberOfRoamingUnit = CLAMP((turn - RoamingUnitNeedStartTurn) / RoamingUnitNeedTurnRatio, MinimumNumberOfRoamingUnit, MaximumNumberOfRoamingUnit) -->
                  <RoamingUnitNeedStartTurn>1</RoamingUnitNeedStartTurn>
                  <RoamingUnitNeedTurnRatio>1.7</RoamingUnitNeedTurnRatio>
                  <MinimumNumberOfRoamingUnit>2</MinimumNumberOfRoamingUnit>
                  <MaximumNumberOfRoamingUnit>1</MaximumNumberOfRoamingUnit>

                  <!-- War unit need: NumberOfWarUnit = CLAMP(WarUnitNeedOffset + (turn - WarUnitNeedStartTurn) / WarUnitNeedTurnRatio, MinimumNumberOfWarUnit, MaximumNumberOfWarUnit) -->
                  <WarUnitNeedOffset>0.7</WarUnitNeedOffset>
                  <WarUnitNeedStartTurn>1.5</WarUnitNeedStartTurn>
                  <WarUnitNeedTurnRatio>1.7</WarUnitNeedTurnRatio>
                  <MinimumNumberOfWarUnit>0.5</MinimumNumberOfWarUnit>
                  <MaximumNumberOfWarUnit>1</MaximumNumberOfWarUnit>

                  <!-- NumbeOfUnitWantedInTheEmpire = (NumberOfUnitPerCity + NumberOfRoamingUnit + NumberOfWarUnit) * GlobalUnitCountMultiplier -->
                </MilitaryEmpireNeedAgent>
              </Network>
            </AILayer_Strategy>

            <AILayer_Altar>
              <ElementEvaluatorContextMultiplier>
                <AIEmpireGrowth>0.8</AIEmpireGrowth>
                <AIEmpireProduction>0.8</AIEmpireProduction>
                <AIEmpireMoney>1.5</AIEmpireMoney>
                <AIEmpireResearch>1.5</AIEmpireResearch>
                <AIEmpireEmpirePoint>2</AIEmpireEmpirePoint>
                <AIEmpireApproval>1.8</AIEmpireApproval>

                <AIEmpireMilitaryPower>1</AIEmpireMilitaryPower>
                <AIEmpireAntiSpy>2</AIEmpireAntiSpy>
                <AIEmpirePillageDefense>0.6</AIEmpirePillageDefense>
                <AIEmpireCityDefense>2</AIEmpireCityDefense>
                <AIEmpireStrategicResource>0.9</AIEmpireStrategicResource>
                <AIEmpireLuxuryResource>1.6</AIEmpireLuxuryResource>

                <AIWorldNavy>0.4</AIWorldNavy>
                <AIWorldSpy>0.1</AIWorldSpy>
                <AIWorldWar>1.8</AIWorldWar>
                <AIWorldPeace>0.6</AIWorldPeace>
                <AIWorldStrategicMarketPrice>-0.3</AIWorldStrategicMarketPrice>
                <AIWorldLuxuryMarketPrice>-0.4</AIWorldLuxuryMarketPrice>
                <AIWorldMercenaryMarketPrice>0.4</AIWorldMercenaryMarketPrice>
              </ElementEvaluatorContextMultiplier>
            </AILayer_Altar>
            
	    <!-- ELCP/LeaderEnemyBoss Cultist focus more on Resource gain and Diplomacy to keep pace -->
            <AILayer_Research>
              <ElementEvaluatorContextMultiplier>
                <AIEmpireApproval>0.8</AIEmpireApproval>
                <AIEmpireGrowth>2</AIEmpireGrowth>
                <AIEmpireProduction>2</AIEmpireProduction>
                <AIEmpireResearch>1.8</AIEmpireResearch>
                <AIEmpireMoney>1.8</AIEmpireMoney>
                <AIEmpireEmpirePoint>2</AIEmpireEmpirePoint>
                <AIEmpirePillageDefense>0.6</AIEmpirePillageDefense>
                <AIEmpireAntiSpy>1</AIEmpireAntiSpy>
                <AIEmpireMilitaryPower>1.7</AIEmpireMilitaryPower>
                <AIEmpireCityDefense>0.5</AIEmpireCityDefense>
                <AIEmpireVision>0.7</AIEmpireVision>
                <AIEmpireBuyout>1.3</AIEmpireBuyout>
                <AIEmpireImprovedRuinSearch>0.5</AIEmpireImprovedRuinSearch>
                <AIEmpireStrategicResource>3</AIEmpireStrategicResource>
                <AIEmpireLuxuryResource>3</AIEmpireLuxuryResource>
                <AIEmpireUnlockShip>1</AIEmpireUnlockShip>
                <AIEmpireUnlockUnit>0.9</AIEmpireUnlockUnit>
                <AIEmpireUnlockAssimilation>2</AIEmpireUnlockAssimilation>
                <AIEmpireUnlockBribe>2</AIEmpireUnlockBribe>
                <AIEmpireUnlockPillage>0.8</AIEmpireUnlockPillage>
                <AIEmpireUnlockPrivateers>1</AIEmpireUnlockPrivateers>
                <AIEmpireUnlockMarketUnit>6</AIEmpireUnlockMarketUnit>
                <AIEmpireUnlockMarketResource>1.8</AIEmpireUnlockMarketResource>
                <AIEmpireUnlockBooster>4</AIEmpireUnlockBooster>
                <AIEmpireUnlockBoosterCultist>5</AIEmpireUnlockBoosterCultist>
                <AIEmpireUnlockDiplomacyPositive>3</AIEmpireUnlockDiplomacyPositive>
              </ElementEvaluatorContextMultiplier>
            </AILayer_Research>
			
			<!-- ELCP: reworked Assimilation, base scores per village -->
			<AILayer_Assimilation>
				<Bos>1</Bos>
				<Ceratan>0.8</Ceratan>
				<Delvers>1</Delvers>
				<Erycis>1</Erycis>
				<Haunts>1</Haunts>
				<Kazanji>1</Kazanji>
				<Silics>1</Silics>
				<SistersOfMercy>1</SistersOfMercy>
				<Urces>1</Urces>
				<Jotus>1</Jotus>
				<Hurnas>1</Hurnas>
				<Gauran>1</Gauran>
				<Birdhive>1</Birdhive>
				<Geldirus>1.2</Geldirus>
				<EyelessOnes>0.5</EyelessOnes>
				<Dorgeshi>1</Dorgeshi>	
				<DawnShua>0.8</DawnShua>
			</AILayer_Assimilation>
          </AIEntity_Empire>

          <AIEntity_City>
            <AILayer_Production>
			  <ArmyThresholdTurns>1.5</ArmyThresholdTurns>
			  <MinimalTurnDuration>0.8</MinimalTurnDuration>
			  <MaximalTurnDuration>0.8</MaximalTurnDuration>
              <ElementEvaluatorContextMultiplier>
                <AICityApproval>0.5</AICityApproval>
                <AICityGrowth>1.2</AICityGrowth>
                <AICityProduction>1.5</AICityProduction>
                <AICityResearch>1.4</AICityResearch>
                <AICityMoney>1.4</AICityMoney>
                <AICityEmpirePoint>1.5</AICityEmpirePoint>
                <AICityMoneyUpkeep>0.9</AICityMoneyUpkeep>
                <AICityDefense>0.5</AICityDefense>
                <AICityPillageDefense>0.5</AICityPillageDefense>
                <AICityLuxuryResource>1.5</AICityLuxuryResource>
                <AICityStrategicResource>1.5</AICityStrategicResource>
                <AICityAntiSpy>0.5</AICityAntiSpy>
                <AIEmpireMilitaryPower>1</AIEmpireMilitaryPower>
                <AIEmpireVision>0.9</AIEmpireVision>
                <AIEmpireWonderVictory>3</AIEmpireWonderVictory>
                <AIEmpireUnlockAltarOfAuriga>1.3</AIEmpireUnlockAltarOfAuriga>
              </ElementEvaluatorContextMultiplier>
            </AILayer_Production>
          </AIEntity_City>
        </MajorEmpire>
      </AI>
